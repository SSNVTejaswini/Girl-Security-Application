<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".Addcontacts">


    <TextView
        android:id="@+id/ac_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="ADD CONTACTS"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <ImageView
        android:id="@+id/ac_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ac_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00999999"
        app:srcCompat="@drawable/addcontact" />

    <TextView
        android:id="@+id/text_addcontact1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/textbox_color"
        android:gravity="center"
        android:hint="Contact1"
        android:textColorHint="#708090"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ac_main"
        app:layout_constraintVertical_bias="0.069" />

    <ImageView
        android:id="@+id/add_img1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toEndOf="@+id/text_addcontact1"
        app:layout_constraintTop_toBottomOf="@+id/ac_main"
        app:layout_constraintVertical_bias="0.067"
        app:srcCompat="@drawable/addc" />

    <TextView
        android:id="@+id/text_addcontact2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/textbox_color"
        android:gravity="center"
        android:hint="Contact2"
        android:textColorHint="#708090"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_addcontact1"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/add_img2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toEndOf="@+id/text_addcontact2"
        app:layout_constraintTop_toBottomOf="@+id/text_addcontact1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/addc" />

    <TextView
        android:id="@+id/text_addcontact3"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/textbox_color"
        android:gravity="center"
        android:hint="Contact3"
        android:textColorHint="#708090"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_addcontact2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/add_img3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toEndOf="@+id/text_addcontact3"
        app:layout_constraintTop_toBottomOf="@+id/text_addcontact2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/addc" />

    <Button
        android:id="@+id/ac_save"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_red_dark"
        android:text="Save"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_addcontact3"
        app:layout_constraintVertical_bias="0.737" />

    <TextView
        android:id="@+id/ac_alertmsgtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ALERT MESSAGE"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ac_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_addcontact3"
        app:layout_constraintVertical_bias="0.23000002" />

    <EditText
        android:id="@+id/ac_alerttextpreview"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Enter your alert text here!"
        android:textColorHint="#708090"
        android:textColor="#000"
        android:textSize="16dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/ac_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ac_alertmsgtext"
        app:layout_constraintVertical_bias="0.06999999" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Alert would be sent only to recently added contacts"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ac_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ac_alerttextpreview"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>