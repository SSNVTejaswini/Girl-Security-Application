<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".SignUp">
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_loginbutton"
                app:srcCompat="@drawable/girlsecurityicon" />

            <EditText
                android:id="@+id/signup_username"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:textColor="#F484AD"
                android:hint="UserName"
                android:textColorHint="#F484AD"
                android:backgroundTint="#F484AD"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_logo" />

            <EditText
                android:id="@+id/signup_phone"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:textColor="#F484AD"
                android:hint="Phone Number"
                android:textColorHint="#F484AD"
                android:backgroundTint="#F484AD"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_username" />

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F484AD"
                android:textColor="#F484AD"
                android:ems="10"
                android:hint="Email Id"
                android:inputType="textEmailAddress"
                android:textColorHint="#F484AD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_phone" />

            <EditText
                android:id="@+id/signup_address"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F484AD"
                android:textColor="#F484AD"
                android:ems="10"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:textColorHint="#F484AD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_email" />

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F484AD"
                android:ems="10"
                android:hint="Password"
                android:inputType="numberPassword"
                android:textColor="#F484AD"
                android:textColorHint="#F484AD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_address" />

            <Button
                android:id="@+id/signup_supbutton"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_corners"
                android:text="Sign Up"
                android:textColor="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_password" />

            <Button
                android:id="@+id/signup_loginbutton"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/signup_righthalfround_corners"
                android:text="Login"
                android:textColor="#F484AD"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/signup_signupbutton"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="28dp"
                android:text="SignUp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/signup_lefthalfround_corners"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>